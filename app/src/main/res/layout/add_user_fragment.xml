<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.users.AddUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_margin="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Si el rut ya está registrado, se modificará ese usuario con los nuevos datos"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/nombres_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:inputType="textPersonName"/>
            <EditText
                android:id="@+id/apellidos_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:inputType="textPersonName"/>
            <EditText
                android:id="@+id/email_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/rut_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rut"
                android:maxLength="9"
                android:inputType="number"/>
            <EditText
                android:id="@+id/contacto_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de contacto"
                android:inputType="phone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile"
                    android:layout_marginHorizontal="20px"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A continuación ingrese un número que corresponderá al número identificador de una imagen de perfil. (En un futuro se podrá seleccionar la imagen directamente)"/>
            </LinearLayout>

            <EditText
                android:id="@+id/foto_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Foto Perfil (1 por defecto)"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Una empresa podrá subir rutas personalizadas con sus ofertas especiales."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Esta cuenta será de empresa?"/>
                <CheckBox
                    android:id="@+id/empresa_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/accept_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir"
                android:onClick="addUser"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>