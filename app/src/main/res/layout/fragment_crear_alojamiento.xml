<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lodging.CreateLodgingFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:text="Publique su alojamiento aqui" />

            <EditText
                android:id="@+id/add_lodging_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad"
                android:inputType="text" />

            <EditText
                android:id="@+id/add_lodging_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion"
                android:inputType="textLongMessage" />

            <EditText
                android:id="@+id/add_lodging_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio por dia"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indique tipo de alojamiento:" />



                <RadioGroup
                    android:id="@+id/add_lodging_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:id="@+id/Casa"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Casa" />

                    <RadioButton
                        android:id="@+id/Depto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Departamento" />

                    <RadioButton
                        android:id="@+id/Cabaña"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Cabaña" />

                    <RadioButton
                        android:id="@+id/Habitacion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Habitacion" />

                    <RadioButton
                        android:id="@+id/Sotano"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sotano" />

                    <RadioButton
                        android:id="@+id/Otro"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Otro" />
                </RadioGroup>


            <Button
                android:id="@+id/lodging_add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>